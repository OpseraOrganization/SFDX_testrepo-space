        <assignmentItems>
            <assignToReference>Dead_Man_Timer</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Dead_Man_Switch_Timer_Length</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Dead_Man_Timer_Last_Checkin</assignToReference>
