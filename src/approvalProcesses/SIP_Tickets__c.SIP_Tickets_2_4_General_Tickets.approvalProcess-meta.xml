<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Ticket_on_behalf_of__c</field>
        <field>Issue_Description__c</field>
        <field>Amount__c</field>
        <field>Reason_for_Request__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Primary_Sales_Mgr__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SIP_Tickets__c.Reason_for_Request__c</field>
                <operation>notEqual</operation>
                <value>Missing or Incorrect Order</value>
            </criteriaItems>
            <criteriaItems>
                <field>SIP_Tickets__c.BehalfMgr__c</field>
                <operation>equals</operation>
                <value>Rep</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Primary Sales Mgr</label>
        <name>Primary_Sales_Mgr</name>
        <rejectionActions>
            <action>
                <name>SIP_Approval_Rejection</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Secondary_Sales_Mgr__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SIP_Tickets__c.Secondary_Sales_Mgr__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>SIP_Tickets__c.Amount__c</field>
                <operation>equals</operation>
                <value>&quot;USD 98,765&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Secondary Sales Mgr</label>
        <name>Secondary_Sales_Mgr</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Tertiary_Sales_Mgr__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>SIP_Tickets__c.Tertiary_Sales_Mgr__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>SIP_Tickets__c.Amount__c</field>
                <operation>equals</operation>
                <value>&quot;USD 98,765&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <label>Tertiary Sales Manager</label>
        <name>Tertiary_Sales_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>SIP/SIP_Approval_Needed_II</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SIP_Tickets__c.Reason_for_Request__c</field>
            <operation>notEqual</operation>
            <value>Requesting Xactly Access,NRComp,SIP Team Admin Ticket,Quota Change</value>
        </criteriaItems>
        <criteriaItems>
            <field>SIP_Tickets__c.Closed_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>SIP_Tickets__c.Approval_Submit_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Approved_Date_Populate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ticket_Status_NYR</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Ticket_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Approved_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Submit_Date_Populate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Closed_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SIP_Approval_Initial_Submission</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Ticket_Status_in_Queue</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SIP Tickets 2.4 General Tickets</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>SIP_Primary_Mgr__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Approval_Submit_Date_Wipe</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ticket_Status_Ticket_Created</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
